<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    x:Class="UpcomingMovies.Forms.UI.Styles.Fonts">
    
    <OnPlatform x:Key="MoviePosterTitleFont" x:TypeArguments="Font">
        <On Platform="Android" Value="Bold,11" />
        <On Platform="iOS" Value="AvenirNext-Bold,Bold,11" />
    </OnPlatform>
    
    <OnPlatform x:Key="MovieDetailHeaderFont" x:TypeArguments="Font">
        <On Platform="Android" Value="Bold,18" />
        <On Platform="iOS" Value="AvenirNext-Bold,Bold,18" />
    </OnPlatform>
    
    <OnPlatform x:Key="MovieDetailQuoteFont" x:TypeArguments="Font">
        <On Platform="Android" Value="Italic,15" />
        <On Platform="iOS" Value="AvenirNext-Italic,Italic,15" />
    </OnPlatform>

</ResourceDictionary>
